<% include header %>

<h1><%=title%></h1>

  <div class="masonry">
    <div class="sizer"></div>
  </div>





  <div id="Menu" style="display:none;">
    <div class="fixed-action-btn horizontal">
      <a class="btn-floating btn-large waves-effect waves-light teal lighten-2">
      <i class="material-icons">arrow_upward</i>
      </a>
